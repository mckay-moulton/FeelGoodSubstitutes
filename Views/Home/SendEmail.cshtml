@{
    ViewData["Title"] = "Email Form";
}
<h2> Send Email </h2>
<br />
<br /> @if (ViewBag.Error != null)

{
     <h2> @ViewBag.Error </h2>
}
@{
    <form method="post"
      action="SendEmail">
        <div class="container">
            <span class="form-control-static"> From (OPTIONAL: Enter email address + name ): </span> <input class="form-control"
            type="text"
            name="receiver" /> <br /> <span class="form-control-static"> Subject (REQUIRED): </span> <input class="form-control"
            type="text"
            name="subject" /> <br /> <span class="form-control-static"> Message/Recommendation (REQUIRED): </span> 
            @*<input class="form-control" type="text" name="a_message" /> <br />*@
            <textarea class="form-control" type="text" name="a_message" rows="2" cols="35"></textarea>
            <input class="btn btn-primary" type="submit" value="Send" />
        </div>
    </form>
}